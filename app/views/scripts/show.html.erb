<p id="notice"><%= notice %></p>
<div class="col-xs-9">
  <h2>Attributes</h2>
  <dl class="dl-horizontal">
    <dt>id</dt>
    <dd><%= @script.id %></dd>
    <dt>name</dt>
    <dd><%= @script.name %></dd>
  </dl>

  <h3>Source</h3>
  <pre class="pre-scrollable">
    <%= "\n" + @script.source.strip %>
  </pre>

  <%= link_to 'Edit', edit_script_path(@script) %> |
  <%= link_to 'Back', scripts_path %>
</div>