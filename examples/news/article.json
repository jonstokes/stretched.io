{
  "title": "Article",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "properties": {
    "id": { "type": "string" },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "title": { "type": "string" },
    "author": { "type": "string" },
    "leader": { "type": "string" },
    "category": {
      "type": "string",
      "enum": ["tech", "business", "legal", "apple", "science", "gaming"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  }
}

